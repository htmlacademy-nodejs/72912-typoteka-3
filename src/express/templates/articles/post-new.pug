extends ../layout.pug

block content
  main
    section
      .popup.popup--new-publication.popup--anti
        .new-publication
          form(action='/articles/add' method='POST' enctype='multipart/form-data')
            .new-publication__header
              h1 Новая публикация
              .new-publication__date-form
                h3 Дата публикации
                .new-publication__date-form-division
                  .new-publication__date-block
                    label(for='new-publication-date' aria-label='Календарь')
                    input#new-publication-date(type='text' name='date' value=articleData.createDate placeholder='2019-03-21')
                    +insertOneMessage(validationMessage, 'date')
              button.new-publication__button.button.button--colored(type='submit') Опубликовать
            a.popup__button.button.button--popup-close(aria-label='Закрыть окно')
              | Закрыть
              | окно
            .new-publication__form.form
              .form__wrapper.form__wrapper--intro
                .form__field
                  label
                    input(type='text' name='title' placeholder='Заголовок' value=articleData.title required='')
                    +insertOneMessage(validationMessage, 'title')
                .form__field.form__field--post-image
                  label
                    input#image-name-field(type='text' name='photo' placeholder='Фотография' value=articleData.picture readonly='')
                    +insertOneMessage(validationMessage, 'picture')
                  .form__image-loader.form__image-loader--publication
                    label
                      input.visually-hidden(type='file' name='img')
                      | Обзор
                .new-publication__category-wrapper
                  a.new-publication__form-link.button.button--transparent(href='/categories') Добавить категорию
                  +insertOneMessage(validationMessage, 'categories')
              .form__wrapper.form__wrapper--text
                .form__field.form__field--publication-text
                  label
                    textarea(rows='5' name='announce' placeholder='Анонс публикации') #{articleData.announce}
                    +insertOneMessage(validationMessage, 'announce')
                .form__field.form__field--publication-text
                  label
                    textarea(rows='10' name='fullText' placeholder='Полный текст публикации') #{articleData.fullText}
                    +insertOneMessage(validationMessage, 'fullText')
        +insertErrorMessage(validationMessage)
