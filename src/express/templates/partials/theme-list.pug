h2.visually-hidden Список тем
ul.themes

  each category in categories
    li.themes__item
      if category.id == categoryId
        a.themes__item-link.themes__item-link--active
          | #{category.name}
          sup #{category.count}
      else
        a.themes__item-link(href=`/articles/category/${category.id}`)
          | #{category.name}
          sup #{category.count}
